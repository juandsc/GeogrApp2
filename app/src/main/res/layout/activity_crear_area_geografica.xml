<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.jds.dsd.geograpp.areasGeograficas.CrearAreaGeografica"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nueva área geográfica"
        android:textColor="@android:color/white"
        android:id="@+id/textViewToolBar_6"
        android:minHeight="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/string_decripcion_area"
        android:id="@+id/textView3"
        android:layout_below="@+id/newNameArea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:textColor="@color/accent_color"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/newDescriptionArea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonCrearArea"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:textColor="@color/accent_color"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonCrearArea"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@drawable/agregar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/string_nombre_area"
        android:id="@+id/textView"
        android:layout_below="@id/textViewToolBar_6"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:textColor="@color/accent_color"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newNameArea"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:textColor="#ff000000"
        android:layout_marginRight="30dp" />

</RelativeLayout>
