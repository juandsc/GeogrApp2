<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="#ffffffff"
    tools:context="com.jds.dsd.geograpp.areasGeograficas.QualityArea">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/toolbar_Calidades_de_Rocas"
        android:textColor="@android:color/white"
        android:id="@+id/textViewToolBarQuality"
        android:minHeight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/newQuality"
        android:layout_below="@id/textViewToolBarQuality"
        android:layout_centerHorizontal="true"
        android:background="@drawable/agregar"
        android:layout_marginTop="15dp" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.jds.dsd.geograpp.areasGeograficas.FragmentListQuality"
        android:id="@+id/fragmentListQuality"
        android:layout_below="@+id/newQuality"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_lista_areas"/>

</RelativeLayout>
