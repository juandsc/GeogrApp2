<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:text="@string/button_areas_geograficas"
        android:id="@+id/button_areas"
        android:background="@drawable/areas_geograficas"
        android:paddingRight="10dp"
        android:textSize="38sp"

        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="118dp"
        android:longClickable="false"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="false"
        android:gravity="bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:text="@string/button_herramientas"
        android:id="@+id/button_herramientas"
        android:background="@drawable/imagen_herramientas"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_areas"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="38dp"
        android:gravity="bottom" />


</RelativeLayout>
