<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jds.dsd.geograpp.areasGeograficas.DetailArea"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Detalles"
        android:textColor="@android:color/white"
        android:id="@+id/textViewToolBar_app2detailArea"
        android:minHeight="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nameArea"
       android:layout_below="@id/textViewToolBar_app2detailArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/description"
        android:layout_below="@+id/nameArea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="#ff000000"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/createdAtArea"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="#ff000000"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/button_brujula"
        android:id="@+id/brujulaArea"
        android:layout_below="@+id/createdAtArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/herramientas_brujula_geologo"
        android:textSize="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/button_calidad"
        android:id="@+id/quilityArea"
        android:layout_below="@+id/brujulaArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/herramientas_calidad_suelo"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete_area"
        android:id="@+id/buttonDeleteArea"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:background="@color/primary_color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</RelativeLayout>
